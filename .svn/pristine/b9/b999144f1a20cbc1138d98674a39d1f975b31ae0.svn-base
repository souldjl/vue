function getTeacherName( $conn, $teacher_id ) {
    $get_sql = "SELECT name FROM live_plan_teacher WHERE id=':id'";
    $data = $conn->select2($get_sql,array(
        'id'=>$teacher_id
    ));

    if( $data ) {
        return iconv("GB2312//IGNORE","UTF-8",$data[0]['name']);
    }else{
        return '';
    }
}